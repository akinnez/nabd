{
  "name": "nabd",
  "version": "1.0.2.rc1",
  "description": "A lightweight, high-performance reactivity engine designed mostly for Fintech applications. Built for precision, speed, and safety.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "vitest run",
    "bench": "tsx bench/resources.bench.ts",
    "publish": "npm run build && npm publish --access public"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "mitata": "^0.1.14",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  },

  "keywords": [
    "react",
    "reactivity",
    "rx",
    "web",
    "signals",
    "nabd",
    "reversion",
    "debounce",
    "debounceSignal",
    "resources",
    "useSignal",
    "useSignalEffect"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akinnez/nabd.git"
  },
  "bugs": {
    "url": "https://github.com/akinnez/nabd/issues"
  },
  "homepage": "https://github.com/akinnez/nabd#readme",

  "author": "Oladejo Akinola Idris",
  "contributors": [
    "Oladejo Akinola Idris (https://github.com/akinnez)"
  ]
}

